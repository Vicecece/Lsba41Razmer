<Window x:Class="Gilmanshin41Razmer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gilmanshin41Razmer"
        mc:Ignorable="d"
        Title="Gilmanshin41Razmer" Height="450" Width="800" MinHeight="300" MinWidth="600" FontFamily="Comic Sans MS" Icon="Res/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"></Frame>
        <TextBlock Text="Магазин обуви 41 ый размер" HorizontalAlignment="Center" FontSize="45" ></TextBlock>
        <Image HorizontalAlignment="Left">
            <Image.Source >
                Res/logo.png
            </Image.Source>
        </Image>
        
        <Button Name="Back_Btn" Click="Back_Btn_Click" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,2,21,0" Grid.Column="1" Grid.ColumnSpan="2"></Button>
    </Grid>
</Window>
